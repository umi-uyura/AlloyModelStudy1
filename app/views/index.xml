
<Alloy>
  <Collection src="memo"/>
  <NavigationWindow platform="ios">
    <Window title="Alloy Model Study 1" onOpen="doOpen" platform="ios" class="container">
      <View class="controller">
        <TextField id="memoText"/>
        <Button id="addButton" title="Add" onClick="addText"/>
      </View>
      <ListView id="memoList" onItemclick="clickItem">
        <ListSection dataCollection="memo">
          <ListItem title="{contents}" itemId="{id}"/>
        </ListSection>
      </ListView>
    </Window>
  </NavigationWindow>
  <Window title="Alloy Model Study 1" onOpen="doOpen" platform="android" class="container">
    <View class="controller">
      <TextField id="memoText"/>
      <Button id="addButton" title="Add" onClick="addText"/>
    </View>
    <ListView id="memoList" onItemclick="clickItem">
      <ListSection dataCollection="memo">
        <ListItem title="{contents}" itemId="{id}"/>
      </ListSection>
    </ListView>
  </Window>
</Alloy>