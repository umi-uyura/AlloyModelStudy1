
<Alloy>
  <Collection src="memo"/>
  <NavigationWindow>
    <Window title="Alloy Model Study 1" onOpen="doOpen" class="container">
      <View class="controller">
        <TextField id="memoText"/>
        <Button id="addButton" title="Add" onClick="addText"/>
      </View>
      <ListView id="memoList" onItemclick="clickItem">
        <ListSection dataCollection="memo">
          <ListItem title="{contents}" itemId="{id}"/>
        </ListSection>
      </ListView>
    </Window>
  </NavigationWindow>
</Alloy>